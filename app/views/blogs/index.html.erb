<div class="main">
  <div class="blog_inner">
  <div class="header_bottom_content"></div>
  <div class="main_top">
    <% if user_signed_in? %>
      <%= link_to "新規投稿", new_blog_path, class: :new_blog_btn %>
    <% end %>

    <%= search_form_for @p, url: search_blogs_path, class: "search-form" do |form| %>
      <%= form.text_field :title_cont, placeholder: "本の名前を検索", class: "search-input" %>
      <%= form.submit "検索", class: "search-btn" %>
    <% end %>

  </div>
  </div>
  <% if @blogs.length != 0 %>
    <div class="card_wrapper">
        <%= render partial: 'blog', collection: @blogs %>
    </div>
  <% else %>
    <h2 class="blog_post_message">記事を投稿して、他のユーザにシェアしましょう！</h2>
    <%= image_tag 'new_blog.png', class: :blog_img %>
  <% end %>
</div>