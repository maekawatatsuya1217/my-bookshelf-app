<div class="card">
  <%= link_to image_tag(blog.image, class: :card_img ), blogs_path %>
  <div class="card_body">
    <%= link_to blog.title, blogs_path, class: :card_title%>
    <p class="card_summary">
      <%= blog.catch_copy %>
    </p>
    <%= link_to blog.user.name, blogs_path, class: :card_user %>
  </div>
</div>