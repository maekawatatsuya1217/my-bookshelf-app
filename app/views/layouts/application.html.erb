<!DOCTYPE html>
<html>
  <head>
    <title>My-Bookshelf-App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <div class="inner">
        <div class="nav">
          <div class="nav_left">
            <%= link_to image_tag("head_logo.png", class: :logo), root_path %>
          </div>
          <div class="nav_right">
            <%= link_to "ブログ", root_path, class: :nav_btn %>
            <%= link_to "ログアウト", root_path, class: :nav_btn %>
            <%= link_to "新規登録", new_user_registration_path, class: :nav_btn %>
            <%= link_to "ログイン", root_path, class: :nav_btn %>
          </div>
        </div>
      </div>
    </header>

    <%= yield %>

    <footer class="footer">
        <p class="footer_text">Copyright © My Bookshelf APP All rights reserved.</p>
    </footer>
  </body>
</html>
